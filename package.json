{
	"name": "template-react",
	"private": true,
	"version": "1.0.0",
	"scripts": {
		"start": "vite preview",
		"start:dev": "vite",
		"test": "rimraf ./tests/coverage .nyc_output && concurrently --names 'test' 'yarn test:all' && yarn calculate-global-test-coverage",
		"test:all": "concurrently --names 'e2e,unit' 'yarn test:e2e' 'yarn test:unit'",
		"test:e2e": "vitest run --coverage --config ./tests/config/vitest.config.e2e.ts",
		"test:unit": "vitest run --coverage --config ./tests/config/vitest.config.unit.ts",
		"calculate-global-test-coverage": "ts-node --skip-project ./tests/config/calculate-global-test-coverage.ts",
		"dev": "concurrently --names 'app,test' 'yarn start:dev' 'yarn test:dev'",
		"test:dev": "concurrently --names 'e2e,unit' 'yarn test:dev:e2e' 'yarn test:dev:unit'",
		"test:dev:e2e": "vitest watch --config ./tests/config/vitest.config.e2e.ts",
		"test:dev:unit": "vitest watch --config ./tests/config/vitest.config.unit.ts",
		"format": "prettier --check \"src/**/*.ts\" \"src/**/*.tsx\" \"tests/**/*.ts\" \"tests/**/*.tsx\" --no-error-on-unmatched-pattern",
		"format:fix": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"tests/**/*.ts\" \"tests/**/*.tsx\"",
		"build": "yarn build:clean && tsc && vite build",
		"build:clean": "rimraf dist; exit 0",
		"lint": "eslint --ignore-path .gitignore . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "yarn lint -- --fix",
		"type-check": "tsc --pretty --noEmit",
		"prepare": "husky"
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@testing-library/react": "^15.0.2",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.12.7",
		"@types/react": "^18.2.66",
		"@types/react-dom": "^18.2.22",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"@vitejs/plugin-react": "^4.2.1",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"@vitest/coverage-istanbul": "^1.5.0",
		"concurrently": "^8.2.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.6",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"eslint-plugin-unicorn": "^52.0.0",
		"eslint-plugin-vitest": "^0.5.3",
		"fs-extra": "^11.2.0",
		"husky": "^9.0.11",
		"jsdom": "^24.0.0",
		"nyc": "^15.1.0",
		"prettier": "^3.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.2.2",
		"vite": "^5.2.0",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^1.5.0"
	}
}
